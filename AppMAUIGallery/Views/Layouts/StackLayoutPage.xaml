<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMAUIGallery.Views.Layouts.StackLayoutPage"
             Title="StackLayoutPage">
    <StackLayout Orientation="Vertical" Margin="20" Padding="20" BackgroundColor="AliceBlue" Spacing="10">
        
        <Label Text="Hello World!"/>

        <StackLayout Spacing="10" Orientation="Horizontal">
            <Button Text="Hello World 1!" HorizontalOptions="Start" />
            <Button Text="Hello World 2!" HorizontalOptions="Start"/>
        </StackLayout>

        <VerticalStackLayout Spacing="10" Padding="10"  BackgroundColor="Aquamarine">
            <Label Text="Hello World 3!" />
            <Label Text="Hello World 4!" />
        </VerticalStackLayout>
        
        <HorizontalStackLayout Spacing="20" Padding="10"  BackgroundColor="Beige">
            <Label Text="Hello World 5!" />
            <Label Text="Hello World 6!" />
        </HorizontalStackLayout>
        
        <Button Text="Hello World 7!" WidthRequest="200" HeightRequest="100" HorizontalOptions="Center" />
        
    </StackLayout>
</ContentPage>