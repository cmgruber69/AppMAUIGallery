<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMAUIGallery.Views.Components.Mains.BoxViewPage"
             Title="BoxViewPage">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label 
            Text="Boxview"
            VerticalOptions="Center" 
            FontSize="30"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

        <BoxView Color="Blue" HeightRequest="3"/>
        <BoxView Color="Blue" HeightRequest="100" WidthRequest="100"/>
        <BoxView Color="Blue" HeightRequest="100" WidthRequest="100" CornerRadius="50"/>

    </VerticalStackLayout>
</ContentPage>