<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMAUIGallery.Views.Components.Lists.TableViewPage"
             Title="TableViewPage">
    <VerticalStackLayout Padding="10">
        <Label 
            Text="TableView - Pouco usada por trazer limitacoes na customizacao"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="30"/>

        <TableView Intent="Settings" RowHeight="30">
            <TableRoot>
                <TableSection Title="Seguranca">
                    <SwitchCell Text="Habilitar senha" />
                </TableSection>
                <TableSection Title="Backup">
                    <SwitchCell Text="Habilitar Backup" />
                    <SwitchCell Text="Habilitar export" />
                    <SwitchCell Text="Habilitar import" />
                </TableSection>
            </TableRoot>
        </TableView>
    </VerticalStackLayout>
</ContentPage>